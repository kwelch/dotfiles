[user]
	name = Kyle Welch
	email = 1295580+kwelch@users.noreply.github.com
	signingkey = 90B59FFCEAD4E56A
[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[alias]
	co = "checkout"
	chp = !git checkout $1 && git pull && :
	nb = "checkout -b"
[status]
	short = true
	branch = true
[core]
	editor = "code --wait"
	excludesfile = ~/.gitignore_global
	fsmonitor = true
	untrackedCache = true
[diff]
	tool = vscode
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	conflictStyle = zdiff3
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[branch]
	autosetuprebase = always
	sort = -committerdate
[tag]
	sort = version:refname
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[pull]
	rebase = true
[help]
	autocorrect = prompt
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[init]
	defaultBranch = main
[includeIf "gitdir:~/atlassian/.path=~/atlassian/"]
	gitconfig = --verbose
[includeIf "gitdir/i:~/atlassian/"]
	path = ~/atlassian/.gitconfig
